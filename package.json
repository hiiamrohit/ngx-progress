{
  "name": "ngx-progress",
  "version": "1.0.0",
  "scripts": {
    "start:demo": "ng serve demo --open --port=3310",
    "build:demo": "ng build demo --prod",
    "build:lib": "ng build lib",
    "lint": "ng lint",
    "package:lib": "yarn run build:lib && yarn run copy:files && yarn run publish",
    "copy:files": "yarn run copy:readme && yarn run copy:license",
    "copy:license": "copy .\\LICENSE.md .\\dist\\lib",
    "copy:readme": "copy .\\README.md .\\dist\\lib",
    "publish": "cd dist/lib && yarn publish --access public",
    "format:check": "prettier --list-different \"projects/**/*.{ts,tsx}\"",
    "format:write": "prettier --write \"projects/**/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "projects/lib/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.13",
    "@angular/cdk": "~8.2.3",
    "@angular/common": "~8.2.13",
    "@angular/compiler": "~8.2.13",
    "@angular/core": "~8.2.13",
    "@angular/flex-layout": "^8.0.0-beta.27",
    "@angular/forms": "~8.2.13",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "~8.2.13",
    "@angular/platform-browser-dynamic": "~8.2.13",
    "@angular/router": "~8.2.13",
    "hammerjs": "^2.0.8",
    "normalize.css": "^8.0.1",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.18",
    "@angular-devkit/build-ng-packagr": "~0.803.18",
    "@angular/cli": "~8.3.16",
    "@angular/compiler-cli": "~8.2.13",
    "@angular/language-service": "~8.2.13",
    "@types/node": "~8.9.4",
    "angular-tslint-rules": "^1.20.1",
    "codelyzer": "^5.0.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "ng-packagr": "^5.4.0",
    "prettier": "^1.19.1",
    "ts-node": "~7.0.0",
    "tsickle": "^0.37.0",
    "tslint": "~5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.5.3"
  }
}
